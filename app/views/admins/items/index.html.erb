<div class="container">
  <h3>商品作成</h3>
  <div class="item_create">
    <%= form_with model: @item, url: admins_items_path, local: true do |f| %>
    <p>
      画像：
      <%= attachment_image_tag @item, :image, format: 'jpg', fallback: "no_image.jpg", size: "300x300" %>
      <%= f.attachment_field :image %>
    </p>
    <p>商品名：<%= f.text_field :name %></p>
    <p>商品分類：<%= f.collection_select :genre_id, @genres, :name, :id %></p>
    <% end %>
  </div>
  <div class="item_list">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>No</th>
          <th>画像</th>
          <th>商品名</th>
          <th>商品説明</th>
          <th>売価</th>
          <th>状態</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.attachment_field :image %></td>
          <td><%= item.name %></td>
          <td><%= item.introduction %></td>
          <td><%= item.price.to_s(:delimited) %>（税込<%= (item.price.to_s(:delimited) * 1.1 %>）</td>
          <td>
            <% if item.is_active %>
              販売中
            <% else %>
              品切中
            <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
