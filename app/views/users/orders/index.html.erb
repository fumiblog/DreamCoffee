<div class="container">
  <div class="row">
    <div class="col-8">
      <h2>買上履歴</h2>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>配送先TEL</th>
            <th>金額</th>
            <th>Order No</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <%= link_to users_orders_path(:order_id => order.id) do %>
            <tr>
              <td><%= order.created_at.strftime('%Y-%m-%d') %></td>
              <td><%= link_to order.name, users_orders_path(:order_id => order.id) %>様宛</td>
              <td><%= order.telephone %></td>
              <td class="text-right"><%= order.total_payment.to_s(:delimited) %></td>
              <td class="text-right"><%= order.id %></td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <h2><%= @list_name %></h2>
      <table class="table table-dark table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>数量</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |orderdetail| %>
          <tr>
            <td><%= link_to orderdetail.item.name, users_items_path(:item_id => orderdetail.item_id ) %></td>
            <td class="text-right"><%= orderdetail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
