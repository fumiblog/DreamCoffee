<div class="container"></br>
  <div class="roast">
    選んでね！！　=>　
    <% @roasts.each do |roast| %>
    [ <%= link_to roast.name, users_items_path(:roast_id => roast.id), class: "text-muted" %> ]
    <% end %>
    <% @tastes.each do |taste| %>
    [ <%= link_to taste.name, users_items_path(:taste_id => taste.id), class: "text-muted" %> ]
    <% end %>
  </div></br>
  <div class="row row-cols-1 row-cols-lg-4 g-4">
    <% @items.each do |item| %>
      <%= link_to users_item_path(item.id) do %>
      <div class="card">
        <%= attachment_image_tag item, :image, format: "png", fallback: "no_image.jpg", class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <div class="card-text"><%= item.intoroduction %></div>
          <div class="card-text">
            <%= item.roast.name %>、<%= item.taste.name %>
          </div>
          <h5 class="card-footer text-right text-danger"><%= item.price.to_s(:delimited)  %>円</h5>
        </div>
      </div>
      <% end %> 
    <% end %>   
  </div>
</div>
