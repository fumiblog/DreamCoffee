<div class="jumbotron">
  <div class="container">
    <h2>Sign up</h2>
    <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="row g-3">
        <div class="row">
          <div class="col">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "30" %>
            </div>
          </div>
          <div class="col">
            <div class="field">
              <%= f.label :氏名 %><br />
              <%= f.text_field :name, autocomplete: "name", :size => "30" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row g-3">
        <div class="row">
          <div class="col">
            <div class="field">
              <%= f.label :郵便番号 %><br />
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", :size => "10" %>
            </div>
          </div>
          <div class="col">
            <div class="field">
              <%= f.label :住所 %><br />
              <%= f.text_field :address, autocomplete: "address", :size => "60" %>
            </div>
          </div>
          <div class="col">
            <div class="field">
              <%= f.label :電話番号 %><br />
              <%= f.text_field :telephone, autocomplete: "telephone", :size => "20" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row g-3">
        <div class="row">
          <div class="col">
            <div class="field">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 桁以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
          <div class="col">
            <div class="field">
              <%= f.label :パスワードを確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
          <div class="col">
            <div class="field">
              <div class="actions">
                <%= f.label :作成します %><br />
                <%= f.submit "Sign up", class: "btn btn-primary" %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    サインアップ済み　→　<%= render "users/shared/links" %>
  </div>
</div>









