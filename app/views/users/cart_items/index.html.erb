<div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>image</th>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>価格</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= form_with model: @cart_item, users_cart_item_path(@cart_item), local: true do |f| %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item_id, :image, fallback: "no_image.jpg" size: "50x50" %></td>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price %></td>
            <td><%= f.select :amount, (1..50), class: "form-select" %></td>
            <td><%= (cart_item.item.price * cart_item.amount).to_s(:delimited) %></td>
            <td><%= link_to "削除", users_cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
            <td><%= cart_item.item.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
